# Base background and foreground colors
set -Ux FZF_COLOR_BG "#0c1517"
set -Ux FZF_COLOR_BG_PLUS "#c6c2ea"
set -Ux FZF_COLOR_FG "#c6c2ea"

# Highlight colors for matched text
set -Ux FZF_COLOR_HL "#f5bd62"
set -Ux FZF_COLOR_HL_PLUS "#f5bd62"

# Colors for UI elements
set -Ux FZF_COLOR_HEADER "#c6c2ea"
set -Ux FZF_COLOR_INFO "#c6c2ea"
set -Ux FZF_COLOR_PROMPT "#8ed1df"
set -Ux FZF_COLOR_SPINNER "#c6c2ea"

# Colors for selection and multi-select markers
set -Ux FZF_COLOR_POINTER "#c6c2ea"
set -Ux FZF_COLOR_MARKER "#f5bd62"

# Background for selected item (often a subtle variation of the main background)
set -Ux FZF_COLOR_BG_PLUS "#0c1517"

# Border color (consider a slightly darker or complementary shade)
set -Ux FZF_COLOR_BORDER "#323b3d"
