{
  // Editor Core Behavior
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },

  "vim_mode": true,
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "relative_line_numbers": true,
  "tab_size": 2,
  "soft_wrap": "editor_width",
  "show_whitespaces": "none",
  "cursor_blink": false,
  "ensure_final_newline_on_save": true,
  "auto_update": true,
  "restore_on_startup": "last_session",
  "auto_indent_on_paste": true,
  "format_on_save": "prettier",
  "hover_popover_enabled": true,
  "scroll_beyond_last_line": "one_page",

  // Language Intelligence
  "enable_language_server": true,
  "completions": {
    "lsp": true,
    "words": "fallback",
    "trigger_on_typing": true,
    "auto_trigger": true,
    "show_signature_hints": true
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "usePlaceholders": true,
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    }
  },
  "gutter": {
    "line_numbers": true,
    "folds": true,
    "code_actions": true,
    "runnables": true,
    "breakpoints": true
  },

  // Visual Design
  "theme": "Ros√© Pine",
  "icon_theme": "Zed (Default)",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16.0,
  "buffer_line_height": "comfortable",
  // "active_pane_modifiers": {
  //   "inactive_opacity": 0.3
  // },
  "indent_guides": {
    "line_width": 1,
    "coloring": "fixed",
    "enabled": true,
    "active_line_width": 1,
    "background_coloring": "disabled"
  },

  // Interface Layout
  "scrollbar": {
    "show": "never"
  },
  "vertical_scroll_margin": 0,
  "project_panel": {
    "dock": "right"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "tab_bar": {
    "show": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },

  // Workflow Enhancements
  "search": {
    "smart_case": true,
    "wrap_around": true,
    "show_preview": true
  },
  "terminal": {
    "working_directory": "current_project_directory",
    "shell": "system",
    "font_size": 14,
    "line_height": "comfortable",
    "alternate_scroll": "on",
    "blinking": "off",
    "toolbar": {
      "breadcrumbs": false
    },
    "dock": "bottom"
  },

  // Extensions Management
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "docker-compose": true,
    "toml": true,
    "php": true,
    "java": true,
    "sql": true,
    "ruby": true,
    "rust": true,
    "typescript": true,
    "markdown": true,
    "json": true,
    "prettier": true, // Explicit formatter
    "eslint": true, // JavaScript linting
    "material-icon-theme": true,
    "rose-pine-theme": true
  },

  // Advanced Editor Settings
  "file_exclude_patterns": [
    "**/.git",
    "**/node_modules",
    "**/__pycache__",
    "**/.DS_Store",
    "**/dist",
    "**/build",
    "**/.next",
    "**/.cache",
    "**/coverage"
  ],
  "auto_save": "after_delay",
  "auto_save_delay": 1000,
  "bracket_matching": {
    "highlight_matching": true,
    "highlight_active": true,
    "show_guides": true
  }
}
