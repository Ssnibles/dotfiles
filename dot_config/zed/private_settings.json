{
  "vim_mode": true,
  "relative_line_numbers": true,
  "tab_size": 2,
  "soft_wrap": "editor_width",
  "show_whitespaces": "none",
  "cursor_blink": false,
  "buffer_line_height": "comfortable",
  "auto_indent_on_paste": true,
  "ensure_final_newline_on_save": true,
  "scroll_beyond_last_line": "one_page",

  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },

  "enable_language_server": true,
  "completions": {
    "lsp": true,
    "words": "fallback",
    "trigger_on_typing": true,
    "auto_trigger": true,
    "show_signature_hints": true,
    "show_completions_on_input_chars": true,
    "show_completion_documentation": true
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": "warning"
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "usePlaceholders": true,
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    }
  },

  "format_on_save": "prettier",

  "theme": "Ros√© Pine",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16,
  "indent_guides": {
    "enabled": true,
    "coloring": "fixed"
  },
  "gutter": {
    "line_numbers": true,
    "folds": true,
    "code_actions": true,
    "runnables": true,
    "breakpoints": true
  },
  "scrollbar": {
    "show": "never"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "tab_bar": {
    "show": false
  },
  "tabs": {
    "show": false,
    "close_position": "right",
    "file_icons": false,
    "git_status": false
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },

  "project_panel": {
    "dock": "right",
    "width": 220,
    "icon_size": 14,
    "hide_when_empty": true
  },
  "terminal": {
    "dock": "bottom",
    "shell": "system",
    "font_size": 16,
    "working_directory": "current_project_directory",
    "alternate_scroll": "on",
    "blinking": "off",
    "line_height": "comfortable",
    "toolbar": {
      "breadcrumbs": false
    }
  },

  "auto_install_extensions": {
    "dockerfile": true
  },

  "file_exclude_patterns": [
    "**/.git",
    "**/node_modules",
    "**/__pycache__",
    "**/.DS_Store",
    "**/dist",
    "**/build",
    "**/.next",
    "**/.cache",
    "**/coverage",
    "**/target"
  ],
  "auto_save": "after_delay",
  "auto_save_delay": 1500,
  "restore_on_startup": "last_session",

  "bracket_matching": {
    "highlight_matching": true,
    "highlight_active": true,
    "show_guides": false
  },
  "hover_popover_enabled": true,
  "jupyter": {
    "enabled": true
  }
}
