[
  {
    // "context": "Workspace",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "shift shift": "tab_switcher::Toggle",
      "ctrl-w": "tab_switcher::CloseSelectedItem",
      "ctrl-shift-p": null,
      "ctrl-/": null,
      "shift-:": "command_palette::Toggle",
      "ctrl-p": [
        "projects::OpenRecent",
        {
          "create_new_window": false
        }
      ]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-space": "editor::ShowCompletions",
      "gd": "editor::GoToDefinition",
      "alt-right": "vim::Indent",
      "alt-left": "vim::Outdent"
    }
  },
  {
    "context": "Project_panel && !Editing",
    "bindings": {
      "a": "project_panel::NewFile",
      "r": "project_panel::Rename",
      "d": "project_panel::Delete"
    }
  },
  {
    "context": "assistant_panel && !editing",
    "bindings": {
      "space": null
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-/": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "vim_mode == normal && !vim_waiting && !menu",
    "bindings": {
      "space b": "git::Blame",
      "shift-k": "editor::Hover",
      "space l f": "editor::Format",
      "space d": "diagnostics::Deploy",
      "space f f": "file_finder::Toggle",
      "space o": "tab_switcher::Toggle",
      "space /": "workspace::NewSearch",
      "n": "search::SelectNextMatch",
      "shift-n": "search::SelectPreviousMatch",
      "g b": "editor::ToggleComments",
      "+ +": "workspace::Save",
      "space w v": "pane::SplitRight",
      "space w h": "pane::SplitDown",
      "space w x": "pane::CloseActiveItem"
    }
  },
  {
    "context": "vim_mode == normal && Editor || Dock",
    "bindings": {
      "space e": "workspace::ToggleRightDock" // Toggle visibility of the right dock panel
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "ctrl-/": "terminal_panel::ToggleFocus" // Open/focus terminal
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore",
      "k j": "vim::NormalBefore"
    }
  },
  {
    "context": "editor && vim_mode == visual && !vim_waiting && !vim_object",
    "bindings": {
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp"
    }
  }
]
